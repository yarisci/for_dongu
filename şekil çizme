  public static void Main(string[] args)
    {
         for (int i = 0; i < 6; i++) 
         {
             for (int k = i; k < 6; k++) 
             {
                 Console.Write(" "); 
             }
             for (int x = 0; x <= i; x++)
             {
                 Console.Write("#");  
                 Console.Write("");
             }
             Console.WriteLine();
         }
         Console.Read();
